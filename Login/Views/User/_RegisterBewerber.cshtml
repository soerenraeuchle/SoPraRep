@model Login.Models.Bewerber

@{
    ViewBag.Title = "_RegistrierungBewerber";
    Layout = "";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegisterBewerber", "User"))
{
    @Html.ValidationSummary(true)
    <div id="name" class="gruppe">
        <h3>Name</h3>
        <div class="input">
            @Html.LabelFor(model => model.vorname)
            @Html.EditorFor(model => model.vorname)
            @Html.ValidationMessageFor(model => model.vorname)
        </div>

        <div class="input">
            @Html.LabelFor(model => model.nachname)
            @Html.EditorFor(model => model.nachname)
            @Html.ValidationMessageFor(model => model.nachname)
        </div>
    </div>

    <div id="adresse" class="gruppe">
        <h3>Adresse</h3>
        <div class="input">
            @Html.LabelFor(model => model.strasse)
            @Html.EditorFor(model => model.strasse)
            @Html.ValidationMessageFor(model => model.strasse)
        </div>

        <div class="input">
            @Html.LabelFor(model => model.hausnummer)
            @Html.EditorFor(model => model.hausnummer)
            @Html.ValidationMessageFor(model => model.hausnummer)
        </div>

        <br />

        <div class="input">
            @Html.LabelFor(model => model.plz)
            @Html.EditorFor(model => model.plz)
            @Html.ValidationMessageFor(model => model.plz)
        </div>

        <div class="input">
            @Html.LabelFor(model => model.wohnort)
            @Html.EditorFor(model => model.wohnort)
            @Html.ValidationMessageFor(model => model.wohnort)
        </div>
    </div>

    <div id="uni" class="gruppe">
        <h3>Identifikation</h3>
        <div class="input">
            @Html.LabelFor(model => model.matrikelnummer)
            @Html.EditorFor(model => model.matrikelnummer)
            @Html.ValidationMessageFor(model => model.matrikelnummer)
        </div>
                
        <div class="input">
            @Html.LabelFor(model => model.studiengang)
            @Html.EditorFor(model => model.studiengang)
            @Html.ValidationMessageFor(model => model.studiengang)
        </div>

        <div class="input">
            @Html.LabelFor(model => model.fachsemester)
            @Html.EditorFor(model => model.fachsemester)
            @Html.ValidationMessageFor(model => model.fachsemester)
        </div>
    </div>

    <div id="account" class="gruppe">
        <h3>Account</h3>
        <div class="input">
            @Html.LabelFor(model => model.email)
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <br />

        <div class="input">
            @Html.LabelFor(model => model.passwort)
            @Html.PasswordFor(model => model.passwort)
            @Html.ValidationMessageFor(model => model.passwort)
        </div>

        <div class="input">
            @Html.LabelFor(model => model.confirmPasswort)
            @Html.PasswordFor(model => model.confirmPasswort)
            @Html.ValidationMessageFor(model => model.confirmPasswort)
        </div>
    </div>

    <div class="button gruppe">
        <input type="button" id="registerFormularZurueck" value="zur&uuml;ck" />
        <input type="submit" id="registerFormularWeiter" value="registrieren" />
    </div>
}


